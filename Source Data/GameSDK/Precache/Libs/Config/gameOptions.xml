    <ArkOptionLayoutPage Label="@ui_Video">
      <SubPages>
        <ArkOptionLayoutSubPage Label="@ui_BasicSettings" WriteConfigFile="true" RequiresApply="true">
          <Attributes>
            <ArkOptionAttribute Action="r_overrideDXGIOutput" Label="@ui_Monitor" SetOnChange="true" Platform="PC">
              <Widget>
                <ArkOptionMonitor />
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="resolution" Label="@ui_Resolution" SetOnChange="true" Platform="PC">
              <Widget>
                <ArkOptionResolution />
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_fullscreen" Label="@ui_DisplayMode" Default="2" SetOnChange="true" Platform="PC">
              <Widget>
                <ArkOptionDropDown>
                  <Options>
                    <ArkOption Label="@ui_Windowed" Value="0" />
                    <ArkOption Label="@ui_Fullscreen" Value="1" />
                    <ArkOption Label="@ui_FullWindowed" Value="2" />
                  </Options>
                </ArkOptionDropDown>
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="sys_MaxFPS" Label="Max FPS" Default="60" SetOnChange="true">
              <Widget>
                <ArkOptionSlider Min="30" Max="240" Decimals="0" Unit="1" Normalize="false" />
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_vsync" Label="@ui_Vsync" Default="0" SetOnChange="true" Platform="PC">
              <Widget>
                <ArkOptionToggle>
                  <Option0 Label="@ui_On" Value="1" />
                  <Option1 Label="@ui_Off" Value="0" />
                </ArkOptionToggle>
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="brightness" Label="@ui_Brightness" SetOnChange="true">
              <Widget>
                <ArkOptionButton />
              </Widget>
            </ArkOptionAttribute>
            <!-- Luma: if this defaults to -1 or 0, or is set to 3 for any other reason, the game will (likely) fail to boot on the next start -->
            <ArkOptionAttribute Action="sys_spec" Label="@ui_SpecPreset" Default="4" SetOnChange="true" Platform="PC" WaitForTextureReload="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_SpecCustom" Value="0" Hidden="true" />
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecMedium" Value="2" />
                    <ArkOption Label="@ui_SpecHigh" Value="3" />
                    <ArkOption Label="@ui_SpecVeryHigh" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
            </ArkOptionAttribute>
          </Attributes>
        </ArkOptionLayoutSubPage>
        <ArkOptionLayoutSubPage Label="@ui_AdvancedSettings" WriteConfigFile="true" Platform="PC" RequiresApply="true" Warning="@ui_advancewarning">
          <Attributes>
            <!-- Luma: if this defaults to -1 or 0, or is set to 3 for any other reason, the game will (likely) fail to boot on the next start. If this isn't here too, when resetting settings from the advanced graphics menu, this would go to 3 (we hid it anyway, the only consequence is that it saves this value in the config twice) -->
            <ArkOptionAttribute Action="sys_spec" Label="@ui_SpecPreset" Default="4" SetOnChange="true" WaitForTextureReload="true" Hidden="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_SpecCustom" Value="0" Hidden="true" />
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecMedium" Value="2" />
                    <ArkOption Label="@ui_SpecHigh" Value="3" />
                    <ArkOption Label="@ui_SpecVeryHigh" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
            </ArkOptionAttribute>
            <!-- This can't go beyond 120 (there's a clamp when its set in the engine, though Luma removes it), still the Hor FOV is dependant on the ultrawide aspect ratio and makes no sense to have, but it's the only one that is properly serialized, the other two are reset on boot, so we are forced to expose both -->
            <ArkOptionAttribute Action="cl_hfov" Label="@ui_HorizontalFieldOfView" SetOnChange="true" Default="85.5656" Platform="PC">
              <Widget>
                <ArkOptionSlider Min="60" Max="160" Decimals="2" Unit="0.5" Normalize="false" />
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="cl_fov 55" />
              </Subactions>
            </ArkOptionAttribute>
            <!-- This can't go beyond 120 (there's a clamp when its set in the engine) -->
            <ArkOptionAttribute Action="cl_fov" Label="Advanced: Scene Vertical Field of View" SetOnChange="true" Default="55" Platform="PC">
              <Widget>
                <ArkOptionSlider Min="40" Max="120" Decimals="2" Unit="0.5" Normalize="false" />
              </Widget>
            </ArkOptionAttribute>
            <!-- This can go beyond 120 but then it wouldn't match the scene vertical FOV. We wouldn't expose it if it wasn't for lens distortion effects happening after rendering (which require the same increase in scene and weapon FOVs), as nobody should change it otherwise -->
            <ArkOptionAttribute Action="r_drawnearfov" Label="Advanced: Weapon Vertical Field of View" SetOnChange="true" Default="55" Platform="PC">
              <Widget>
                <ArkOptionSlider Min="40" Max="120" Decimals="2" Unit="0.5" Normalize="false" />
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_motionblur" Label="Motion Blur" Default="2" SetOnChange="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_Off" Value="0" />
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecHigh" Value="2" />
                  </Options>
                </ArkOptionList>
              </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="sys_spec_ObjectDetail" Label="@ui_QualityObject" Default="4" SetOnChange="true" WaitForTextureReload="false">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecMedium" Value="2" />
                    <ArkOption Label="@ui_SpecHigh" Value="3" />
                    <ArkOption Label="@ui_SpecVeryHigh" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="sys_spec_Shadows" Label="@ui_QualityShadows" Default="4" SetOnChange="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecMedium" Value="2" />
                    <ArkOption Label="@ui_SpecHigh" Value="3" />
                    <ArkOption Label="@ui_SpecVeryHigh" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="sys_spec_Texture" Label="@ui_QualityTexture" Default="4" SetOnChange="true" WaitForTextureReload="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_SpecLow" Value="1" />
                    <ArkOption Label="@ui_SpecMedium" Value="2" />
                    <ArkOption Label="@ui_SpecHigh" Value="3" />
                    <ArkOption Label="@ui_SpecVeryHigh" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_TexMaxAnisotropy" Label="@ui_QualityAniso" Default="16" SetOnChange="true">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_Spec2x" Value="2" />
                    <ArkOption Label="@ui_Spec4x" Value="4" />
                    <ArkOption Label="@ui_Spec8x" Value="8" />
                    <ArkOption Label="@ui_Spec16x" Value="16" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_AntialiasingMode" Label="@ui_Antialiasing" SetOnChange="true" Default="4" Platform="PC">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_Off" Value="0" />
                    <!-- FXAA is broken (even in Vanilla), objects highlights don't appear -->
                    <ArkOption Label="FXAA (bad and broken)" Value="5" Hidden="true" />
                    <ArkOption Label="SMAA 1X" Value="1" />
                    <!--This mode just adds blurrying with no real TAA upscaling -->
                    <ArkOption Label="SMAA 1TX" Value="2" Hidden="true" />
                    <!--Disabled as it looks bad (Edge Sharpeining + TAA done after does not work), and it's slower to replace with DLSS -->
                    <ArkOption Label="SMAA 2TX (Redirects to TAA with DLSS)" Value="3" Hidden="true" />
                    <ArkOption Label="TAA (DLSS Compatible)" Value="4" />
                  </Options>
                </ArkOptionList>
              </Widget>
            </ArkOptionAttribute>
            <!-- Development only, not useful for the final user
            <ArkOptionAttribute Action="r_AntialiasingTAAPattern" Label="TAA Pattern" Default="10" SetOnChange="true">
              <Widget>
                <ArkOptionSlider Min="2" Max="12" Decimals="1" Unit="1" Normalize="false" />
              </Widget>
            </ArkOptionAttribute>
            -->
            <!-- Optional sharpening. Luma already has AMD RCAS running after TAA, which should be enough, but this adds a second sharpening pass for users that wanted it. This can go beyond 1 but it looks terrible -->
            <ArkOptionAttribute Action="r_Sharpening" Label="Additional Sharpening" Default="0" SetOnChange="true">
              <Widget>
                <ArkOptionSlider Min="0.0" Max="1.0" Decimals="2" Unit="0.05" Normalize="true" />
              </Widget>
            </ArkOptionAttribute>
            <!-- Not compatible with LUMA (probably because it upgrades textures to formats that don't support MSAA (in case it used that), or simply their code was hardcoded for certain texture formats (or because we missed replacing some MSAA render targets with HDR versions) 
            <ArkOptionAttribute Action="r_supersampling" Label="Supersampling (Experimental)" Default="0" SetOnChange="true" Platform="PC">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_Off" Value="0" />
                    <ArkOption Label="2x2" Value="2" />
                  </Options>
                </ArkOptionList>
              </Widget>
            </ArkOptionAttribute>
            -->
            <ArkOptionAttribute Action="r_arkssdo" Label="@ui_ssdo" SetOnChange="true" Default="2" WaitForTextureReload="false">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_off" Value="0" />
                    <ArkOption Label="@ui_halfres" Value="1" />
                    <ArkOption Label="@ui_fullres" Value="2" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="r_arkssr" Label="@ui_ssr" SetOnChange="true" Default="2" WaitForTextureReload="false">
              <Widget>
                <ArkOptionList>
                  <Options>
                    <ArkOption Label="@ui_off" Value="0" />
                    <ArkOption Label="@ui_halfres" Value="1" />
                    <ArkOption Label="@ui_fullres" Value="2" />
                  </Options>
                </ArkOptionList>
              </Widget>
              <Subactions>
                <ArkOptionSubAction Action="sys_spec 0" />
              </Subactions>
            </ArkOptionAttribute>
            <!-- For some reason this toogle appear with ON/OFF flipped in the UI -->
            <ArkOptionAttribute Action="osm_enabled" Label="@ui_drsenable" Default="0" SetOnChange="true" Platform="PC">
             <Widget>
              <ArkOptionToggle>
               <Option1 Label="@ui_On" Value="1"/>
               <Option0 Label="@ui_Off" Value="0"/>
              </ArkOptionToggle>
             </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="osm_targetFPS" Label="@ui_drstargetfps" SetOnChange="true" Default="60" Platform="PC">
             <Widget>
              <ArkOptionSlider Min="30" Max="240" Decimals="0" Unit="1.0" Normalize="false"/>
             </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="osm_targetPercentLowerTolerance" Label="Adaptive Resolution FPS Lower Tolerance %" SetOnChange="true" Default="10" Platform="PC">
             <Widget>
              <!--This can go as low as 0 but it makes no sense to set it so really, it makes it rubber band, Prey's default is 3 but that's too low-->
              <ArkOptionSlider Min="0" Max="50" Decimals="0" Unit="1.0" Normalize="false"/>
             </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="osm_targetPercentUpperTolerance" Label="Adaptive Resolution FPS Upper Tolerance %" SetOnChange="true" Default="5" Platform="PC">
             <Widget>
              <!--This can go as low as 0 but it makes no sense to set it so really, it makes it rubber band, Prey's default is 4 but that's too low-->
              <ArkOptionSlider Min="0" Max="50" Decimals="0" Unit="1.0" Normalize="false"/>
             </Widget>
            </ArkOptionAttribute>
            <ArkOptionAttribute Action="osm_fbMinScale" Label="Adaptive Resolution Minimum Scale" SetOnChange="true" Default="0.5" Platform="PC">
             <Widget>
              <!--The UI seems to show a max of 7 decimap points, with the 8th one being read but cropped, we need the exact 1/3 value to be as accurate as possible for DLSS (though it's not smooth below 0.5 with DLSS)-->
              <ArkOptionSlider Min="0.33333333" Max="1.0" Decimals="3" Unit="0.01" Normalize="false"/>
             </Widget>
            </ArkOptionAttribute>
				 <!--Disabled as this crashes on set (not sure why)
            <ArkOptionAttribute Action="g_reticleYPercentage" Label="Reticle Vertical Position" SetOnChange="false" Default="0.575" Platform="PC">
             <Widget>
              <ArkOptionSlider Min="0.25" Max="0.75" Decimals="3" Unit="0.01" Normalize="false"/>
             </Widget>
            </ArkOptionAttribute>
				-->
          </Attributes>
        </ArkOptionLayoutSubPage>
      </SubPages>
    </ArkOptionLayoutPage>
